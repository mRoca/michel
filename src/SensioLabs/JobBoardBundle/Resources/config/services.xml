<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sensiolabs.twig.country_extension" class="SensioLabs\JobBoardBundle\Twig\CountryExtension">
            <tag name="twig.extension" />
        </service>
        <service id="sensiolabs.twig.contract_extension" class="SensioLabs\JobBoardBundle\Twig\ContractExtension">
            <tag name="twig.extension" />
        </service>
        <service id="sensiolabs_jobboard.repository.user" class="SensioLabs\JobBoardBundle\Repository\UserRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>SensioLabsJobBoardBundle:User</argument>
        </service>
        <service id="sensiolabs_jobboard.security.userprovider" class="SensioLabs\JobBoardBundle\Security\UserProvider">
            <argument type="service" id="sensiolabs_jobboard.repository.user" />
        </service>
        <service id="sensiolabs_jobboard.event_listener.interactive_login" class="SensioLabs\JobBoardBundle\EventListener\SecurityInteractiveLoginListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="form.job" class="SensioLabs\JobBoardBundle\Form\JobType">
            <tag name="form.type" alias="job" />
        </service>
    </services>
</container>
