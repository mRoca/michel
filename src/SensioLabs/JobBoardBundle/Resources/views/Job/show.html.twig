{% extends "SensioLabsJobBoardBundle::layout.html.twig" %}
{% from 'SensioLabsJobBoardBundle:Includes:breadcrumb.html.twig' import breadcrumb %}

{% block page_class 'preview' %}
{% block title 'Developer @ SensioLabs' %}

{% block content %}
    {{ breadcrumb({
        (job.country | countryName): path('homepage', {'country': job.country}),
        (job.contract | contractName): path('homepage', {'contract': job.contract}),
        (job.title): null
    }) }}

    {% embed 'SensioLabsJobBoardBundle:Includes:job.html.twig' %}{% endembed %}
    <div class="clear"></div>
{% endblock %}
