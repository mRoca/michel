{% extends "SensioLabsJobBoardBundle::layout.html.twig" %}

{% from 'SensioLabsJobBoardBundle:Includes:breadcrumb.html.twig' import breadcrumb %}

{% block page_class 'preview' %}

{% block title job.title %}

{% block content %}
    {{ breadcrumb({
        ('frontend.jobs.post' | trans): path('job_post'),
        ('buttons.preview' | trans):  path('job_preview', job.urlParameters),
    }) }}

    {% embed 'SensioLabsJobBoardBundle:Includes:job.html.twig' %}
        {% block job_steps %}
            <div class="padding clearfix">
                <a href="{{ path('job_post') }}" class="green-button left"><span class="sprite-icon-light-arrow-left"></span>
                    <span>{{ 'buttons.make_changes' | trans }}</span>
                </a>
                <a href="{{ path('job_publish', job.urlParameters) }}" class="green-button right">
                    <img src="{{ asset('bundles/sensiolabsjobboard/images/blank.png') }}" class="sprite-icon-cloud-upload" />
                    <span>{{ 'buttons.publish' | trans }}</span>
                </a>
            </div>
        {% endblock %}
    {% endembed %}

    <div class="clear"></div>
{% endblock %}
