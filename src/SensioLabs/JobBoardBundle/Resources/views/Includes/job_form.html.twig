{% extends 'SensioLabsJobBoardBundle:Includes:box.html.twig' %}

{% block box_content %}
    {{ form_start(form) }}

    <div class="padding">
        <div class="head clearfix">

            {% if(errors | length) %}
                <div class="error-container">
                    <h4>{% trans %}Errors{% endtrans %} :</h4>

                    <ul>
                        {% for error in errors %}
                            <li>{{ error | trans({}, 'validators') }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <div class="title-company">
                <div class="job-title">
                    {{ form_widget(form.title, {'attr': {'class': 'title-input' }}) }}
                </div>
                <div class="company-label">
                    <label class="label" for="job_company">@</label>
                    {{ form_widget(form.company) }}
                </div>
            </div>

            <div class="country-city-contract">
                <div class="country-city clearfix">
                    <div class="city-input country-select">
                        {{ form_widget(form.country) }}
                    </div>
                    <div class="city-input">
                        {{ form_widget(form.city, {'attr': {'class': 'location' }}) }}
                    </div>
                </div>
                <div>
                    {{ form_widget(form.contract) }}
                </div>
            </div>
        </div>

        {% block admin_extra_fields %}{% endblock %}

        <div>
            {{ form_widget(form.description, {'attr': {'class': 'ckeditor'}}) }}
        </div>

        <div class="how-to-apply">
            <h3> How to apply? </h3><br/>
            {{ form_widget(form.howToApply) }}
        </div>

    </div>

    <div class="padding clearfix">
        {% block buttons %}{% endblock %}
    </div>

    <div class="clear"></div>

    {{ form_end(form) }}
{% endblock %}
